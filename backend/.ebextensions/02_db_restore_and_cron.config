container_commands:
  01_restore_db:
    command: "node scripts/restore-db.js || true"
    leader_only: false

  02_create_cron_file:
    command: |
      cat > /etc/cron.d/lostnfound-backup <<'CRON'
      0 2 * * * root /usr/bin/node /var/app/current/scripts/backup-db.js >> /var/log/lostnfound-backup.log 2>&1
      CRON
      chmod 0644 /etc/cron.d/lostnfound-backup || true
    leader_only: false
