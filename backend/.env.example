# Copy to .env and fill values for AWS and DB if you want to use them
PORT=3001
JWT_SECRET=replace-me-with-a-secure-secret
DB_PATH=./lostnfound.db

# AWS (optional): if present, uploads will be pushed to S3
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name

# Rekognition (optional)
AWS_REKOGNITION_ENABLED=false

# Matching threshold (0-100)
MATCH_THRESHOLD=80
